<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">

            <gradient
                android:startColor="@color/azulEscuro" 
                android:endColor="@color/azulEscuro"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="@color/azulEscuro" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
       <shape
           android:shape="oval">
            <gradient
                android:startColor="@color/azul" 
                android:endColor="@color/azul"
                android:angle="180" />
            <stroke
                android:width="3dp"
                android:color="@color/azul" /> 
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
   
</selector>